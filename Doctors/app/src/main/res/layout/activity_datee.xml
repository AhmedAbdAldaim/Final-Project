<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_datee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical"
    tools:context="com.example.soso.doctors.Datee">
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue1"
        android:gravity="top"
        android:id="@+id/v"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        />
    <com.example.soso.doctors.textviewfont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginTop="-40dp"
        android:text="Booking details"
        android:gravity="center"
        />

    <LinearLayout
        android:id="@+id/activity_dateee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="#ededed"
        >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            >
            <com.example.soso.doctors.textviewfont2
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/blue1"
                android:id="@+id/hosnam"
                android:paddingLeft="5dp"
                android:gravity="left"
                android:text="Hospital Name :"
                android:layout_marginTop="0dp"
                />
            <com.example.soso.doctors.textviewfont2
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/hos"
                   android:gravity="left"


                android:layout_marginTop="0dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            >
            <com.example.soso.doctors.textviewfont2
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/blue1"
                android:id="@+id/locc"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Location Name :"
                android:layout_marginTop="0dp"
                />
            <com.example.soso.doctors.textviewfont2
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/loc"
                android:gravity="left"
                android:layout_marginTop="0dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="110dp"
            >
            <com.example.soso.doctors.textviewfont2
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/blue1"
                android:id="@+id/depp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Specicalion   :"
                android:layout_marginTop="0dp"
                />
            <com.example.soso.doctors.textviewfont2
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/dep"
                android:gravity="left"
                android:layout_marginTop="0dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="160dp"
            >
            <com.example.soso.doctors.textviewfont2
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/blue1"
                android:paddingLeft="5dp"
                android:id="@+id/docc"
                android:gravity="left"
                android:text="Doctor Name :"
                android:layout_marginTop="0dp"
                />
            <com.example.soso.doctors.textviewfont2
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/doc"
                android:gravity="left"
                android:layout_marginTop="0dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="210dp"
            >
            <com.example.soso.doctors.textviewfont2
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/blue1"
                android:id="@+id/picc"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Pichan Name :"
                android:layout_marginTop="0dp"
                />
            <com.example.soso.doctors.textviewfont2
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/pic"
                android:gravity="left"
                android:layout_marginTop="0dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="260dp"
            >
            <com.example.soso.doctors.textviewfont2
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/blue1"
                android:id="@+id/datee"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Book Date :"
                android:layout_marginTop="0dp"
                />
            <com.example.soso.doctors.textviewfont2
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/date"
                android:gravity="left"
                android:layout_marginTop="0dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


            <com.example.soso.doctors.textviewfont2
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/red"
                android:id="@+id/id_pic"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/red"
                android:id="@+id/iddoc"
                android:visibility="gone"
                android:layout_marginTop="50dp"
                />

    <com.example.soso.doctors.buttonfont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_update"
        android:text="BOOK SURE "
        android:layout_gravity="bottom"
        android:textSize="24dp"
        android:textColor="@color/white"
android:onClick="sure"
        />
</LinearLayout>
</LinearLayout>