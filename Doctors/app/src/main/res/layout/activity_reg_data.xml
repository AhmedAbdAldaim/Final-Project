<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/re"
    tools:context="com.example.soso.doctors.Login"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue1"
        android:gravity="top"
        android:id="@+id/v"
        />
    <com.example.soso.doctors.textviewfont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginTop="16dp"
        android:text="Data Form"
        android:gravity="center"
        android:id="@+id/ss"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="10dp"
        android:onClick="back"
        android:layout_alignRight="@+id/ss"
        />


    <LinearLayout
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/v"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        >


        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:visibility="gone"
            >
        <com.example.soso.doctors.edittext
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_user"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:background="@drawable/edittext"
            android:hint="name"
            android:visibility="gone"
            />
        </android.support.v7.widget.CardView>

    <com.example.soso.doctors.textviewfont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:text=" * Public Quatison"
        android:textColor="@color/red"
        android:textSize="15dp"
        />

        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="4dp"
            >

            <com.example.soso.doctors.edittext
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/patriot_numberr"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_chrome_reader_mode_black_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:background="@drawable/edittext"
                android:hint="Patriot Number"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="50dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <com.example.soso.doctors.textviewfont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gander : "
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/blue1"
                />

            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="20sp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Female" />

            </RadioGroup>

        </LinearLayout>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="50dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
           android:gravity="center"
            >
        <com.example.soso.doctors.textviewfont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BirthDay : "
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue1"
            />
        <com.example.soso.doctors.textviewfont2
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:hint="SELECT DATE"
            android:textSize="20dp"
            />
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="50dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.example.soso.doctors.textviewfont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/blue1"
                />
        <Spinner
            android:id = "@+id/spinner"
            android:layout_width = "255dp"
            android:layout_height = "wrap_content"
            android:prompt = "@string/app_name"

            />
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="50dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.example.soso.doctors.textviewfont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type : "

                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/blue1"
                />
            <Spinner
                android:id = "@+id/blood"
                android:layout_width = "230dp"
                android:layout_height = "wrap_content"
                android:prompt = "@string/app_name"

                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="50dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.example.soso.doctors.textviewfont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social_Status : "

                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/blue1"
                />
            <Spinner
                android:id = "@+id/social_status"
                android:layout_width = "206dp"
                android:layout_height = "wrap_content"
                android:prompt = "@string/app_name"

                />
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.example.soso.doctors.textviewfont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=" * Medical Quatison"
            android:textColor="@color/red"
            android:textSize="15dp"
            />
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="4dp"
            >
            <com.example.soso.doctors.edittext
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/sensitivity"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_pan_tool_black_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:background="@drawable/edittext"
                android:hint="Sensitivity"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
            <com.example.soso.doctors.edittext
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/genetic_diseases"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_explicit_black_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:background="@drawable/edittext"
                android:hint="Genetic Diseases"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
            <com.example.soso.doctors.edittext
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/bad_habit"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_mood_bad_black_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:background="@drawable/edittext"
                android:hint="Bad Habit"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/blue1"
            >
        <com.example.soso.doctors.buttonfont
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login"
            android:text="Register "
            android:textSize="20dp"
            android:textColor="@color/white"
            android:onClick="insert"
            />
</android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>