<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="142dp"
    android:layout_height="180dp"
    android:layout_marginTop="50dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#ffffff"
    >

    <com.example.soso.doctors.textviewfont2
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/name"
        android:textSize="15dp"
        android:textColor="#fff"
        android:background="#002dc2"
        android:layout_gravity="top"
        android:gravity="center"
        />
    <com.example.soso.doctors.textviewfont2
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/name2"
        android:textSize="15dp"
        android:textColor="#fff"
        android:background="#002dc2"
        android:layout_gravity="top"
        android:visibility="gone"
        android:gravity="center"
        />
    <com.example.soso.doctors.textviewfont2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/from"
        android:textSize="20dp"
        android:text="From"
        android:textColor="#000"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="-37dp"
        />
    <com.example.soso.doctors.textviewfontse
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/ffrom"
        android:textSize="18dp"
        android:layout_marginTop="-15dp"
        android:textColor="#002dc2"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <com.example.soso.doctors.textviewfont2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/to"
        android:textSize="20dp"
        android:text="To"
        android:textColor="#000"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <com.example.soso.doctors.textviewfontse
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/too"
        android:textSize="18dp"

        android:textColor="#002dc2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="33dp"
        />

    <com.example.soso.doctors.buttonfont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btndate"
        android:textColor="#fff"
        android:textSize="20dp"
        android:text="Book"
        android:background="@drawable/btndat"
        android:layout_marginTop="150dp"

        />

</android.support.v7.widget.CardView>
    <com.example.soso.doctors.textviewfontse
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/hos"
        android:textSize="18dp"
android:visibility="gone"
        android:textColor="#002dc2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="33dp"
        />
    <com.example.soso.doctors.textviewfontse
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/loc"
        android:textSize="18dp"
        android:visibility="gone"
        android:textColor="#002dc2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="33dp"
        />
    <com.example.soso.doctors.textviewfontse
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/dep"
        android:textSize="18dp"
        android:visibility="gone"
        android:textColor="#002dc2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="33dp"
        />
    <com.example.soso.doctors.textviewfontse
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/doc"
        android:textSize="18dp"
        android:visibility="gone"
        android:textColor="#002dc2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="33dp"
        />
    <com.example.soso.doctors.textviewfontse
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/pic"
        android:textSize="18dp"
        android:visibility="gone"
        android:textColor="#002dc2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="33dp"
        />

    <com.example.soso.doctors.textviewfontse
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/id_pic"
        android:textSize="18dp"
android:visibility="gone"
        android:textColor="#002dc2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="33dp"
        />
    <com.example.soso.doctors.textviewfontse
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/id_doc"
        android:textSize="18dp"
android:visibility="gone"
        android:textColor="#002dc2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="33dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img"
        android:layout_gravity=""
        android:layout_marginTop="53dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@color/white"
        app:civ_border_overlay="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:civ_border_width="2sp"
        app:civ_circle_background_color="#000"
        android:visibility="gone"
        />
</LinearLayout>