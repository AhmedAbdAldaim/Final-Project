<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/alter"
    android:layout_height="200dp">
    <com.example.soso.doctors.textviewfont2
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/t1"
        android:text="Logout"
        android:background="#e40004"
        android:textSize="25dp"
        android:drawableLeft="@drawable/ic_error_black_24dp"
        android:paddingRight="7dp"
        android:drawablePadding="7dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="#fff"
        />
    <com.example.soso.doctors.textviewfont2
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="- Are You Sure Logout?"
        android:textSize="25dp"
        android:id="@+id/t2"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_marginRight="12dp"
        android:textColor="#000"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_massage"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <com.example.soso.doctors.buttonfont
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:text="Yes"
            android:id="@+id/b1"
            android:textSize="23dp"
            android:background="@drawable/button_massage"
            android:textColor="#000"

            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:background="#000"></View>

        <com.example.soso.doctors.buttonfont
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:text="NO"
            android:id="@+id/b2"
            android:textSize="23dp"
            android:textColor="#000"
            android:background="@drawable/button_massage"

            />

    </LinearLayout>


</LinearLayout>