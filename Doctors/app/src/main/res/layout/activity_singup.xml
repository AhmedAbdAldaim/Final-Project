<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/re"
    tools:context="com.example.soso.doctors.Login"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue1"
        android:gravity="top"
        android:id="@+id/v"
        />
    <com.example.soso.doctors.textviewfont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginTop="16dp"
        android:text="Register Now !"
        android:gravity="center"
        android:id="@id/a"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="10dp"
        android:onClick="back"
        android:layout_alignRight="@id/a"
        />

    <LinearLayout
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/v"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/moad1"
            android:layout_marginTop="-150dp"
            />
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="-20dp"
            >
        <com.example.soso.doctors.edittext
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/fname"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:background="@drawable/edittext"
            android:hint="name"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
        <com.example.soso.doctors.edittext
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="@drawable/edittext"
            android:hint="Email"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.example.soso.doctors.edittext
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:drawablePadding="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:background="@drawable/edittext"
                android:hint="password"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageseyes"
                android:src="@drawable/ic_visibility_off_black_24dp"
                android:onClick="passhiden"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-342dp"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.example.soso.doctors.edittext
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/surepass"

                android:drawablePadding="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:background="@drawable/edittext"
                android:hint="confirm"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/images2"
                android:src="@drawable/ic_visibility_off_black_24dp"
                android:onClick="passhiden"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-342dp"
                />
        </LinearLayout>
</android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/blue1"
            android:layout_marginTop="25dp"
            >
        <com.example.soso.doctors.buttonfont
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="@drawable/button_login"
            android:text="NEXT "
            android:textSize="20dp"
            android:textColor="@color/white"
            android:onClick="singup"
            />
</android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>