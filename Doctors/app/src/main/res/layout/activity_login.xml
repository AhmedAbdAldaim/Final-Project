<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/re"

    >
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue1"
        android:gravity="top"
        android:id="@+id/v"
        />
    <com.example.soso.doctors.textviewfont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginTop="16dp"
        android:text="login"
        android:gravity="center"

        />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/v"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.example.soso.doctors.Login">



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/moad1"
        android:layout_marginTop="-190dp"
        />
    <com.example.soso.doctors.edittext
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/edidpic"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/edittext"
        android:hint="idiser"
        android:visibility="gone"
        android:layout_marginBottom="50dp"

        />
    <com.example.soso.doctors.edittext
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/edid"
        android:visibility="gone"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/edittext"
        android:hint="idiser"
        android:layout_marginBottom="50dp"

        />
    <android.support.v7.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="-40dp"
        >
    <com.example.soso.doctors.edittext
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed1"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/edittext"
        android:hint="Email"
        />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="20dp"
        >
<LinearLayout
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

    <com.example.soso.doctors.edittext
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/ed2"
        android:drawablePadding="10dp"
        android:paddingLeft="55dp"
        android:paddingRight="50dp"
        android:background="@drawable/edittext"
        android:hint="password"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageseyes"
        android:src="@drawable/ic_visibility_off_black_24dp"
        android:onClick="passhiden"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-342dp"
        />
</LinearLayout>

    </android.support.v7.widget.CardView>



    <com.example.soso.doctors.chckboxtfont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:text="حفظ البيانات"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        />
    <android.support.v7.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/blue1"
        >
    <com.example.soso.doctors.buttonfont
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/button_login"
        android:text="Login"
        android:textSize="20dp"
        android:onClick="login"
        android:textColor="@color/white"
        />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <com.example.soso.doctors.textviewfont2
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r"
            android:text=" Dont hava any Acound!  "
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#000"
            />
        <com.example.soso.doctors.textviewfont2
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg"
            android:layout_gravity="left"
            android:text="Register now!  "
            android:textColor="#ff00"
            android:onClick="reg"
            android:gravity="left"
            />

    </LinearLayout>

</LinearLayout>


</RelativeLayout>